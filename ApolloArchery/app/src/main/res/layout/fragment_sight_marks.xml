<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SightMarksFragment" >

    <TextView
        android:id="@+id/sight_mark_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="@string/sight_marks_label"
        android:textAlignment="center"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/sight_marks_list"
        android:layout_width="match_parent"
        android:layout_height="629dp"
        android:layout_marginTop="36dp">

    </ListView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/sight_marks_fAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:contentDescription="@string/sight_mark_add"
        android:focusable="true"
        app:srcCompat="@android:drawable/ic_input_add" />
</FrameLayout>